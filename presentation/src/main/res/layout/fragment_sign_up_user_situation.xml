<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <TextView
            android:id="@+id/title_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sign_up_title_txt_margin"
            android:layout_marginStart="@dimen/sign_up_title_txt_margin"
            android:fontFamily="@font/noto_sans_kr_bold"
            android:includeFontPadding="false"
            android:text="전공을\n선택해 주세요"
            android:textColor="@color/black"
            android:textSize="45sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/sign_up_center_margin"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="@dimen/sign_up_center_margin"
            android:background="@drawable/sign_up_edit_txt"
            android:elevation="10dp"
            android:hint="실제 이름을 입력해 주세요"
            android:padding="15dp"
            app:layout_constraintEnd_toEndOf="@+id/title_txt"
            app:layout_constraintStart_toStartOf="@+id/title_txt"
            app:layout_constraintTop_toBottomOf="@+id/title_txt" />

        <TextView
            android:id="@+id/ex_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/noto_sans_kr_light"
            android:includeFontPadding="false"
            android:text="자신의 전공을 선택해 주세요"
            android:textColor="@color/sign_up_ex_txt"
            app:layout_constraintEnd_toEndOf="@+id/spinner"
            android:layout_marginStart="@dimen/sign_up_center_ex_txt_margin"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="@dimen/sign_up_center_ex_txt_margin"
            app:layout_constraintStart_toStartOf="@+id/spinner"
            app:layout_constraintTop_toBottomOf="@+id/spinner" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/next_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/sign_in_origin_login_btn"
            android:fontFamily="@font/noto_sans_kr_medium"
            android:gravity="center"
            android:layout_marginBottom="@dimen/sign_up_bottom_next_btn_margin"
            android:layout_marginEnd="@dimen/sign_up_bottom_next_btn_margin"
            android:layout_marginStart="@dimen/sign_up_bottom_next_btn_margin"
            android:includeFontPadding="false"
            android:padding="@dimen/signup_next_btn_padding"
            android:text="다음으로"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>