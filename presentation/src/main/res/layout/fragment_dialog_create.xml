<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="fragment"
            type="com.gsm.presentation.ui.study.dialog.CreateGroupDialog" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/title_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="제목" />

        <EditText
            app:layout_constraintTop_toBottomOf="@id/title_txt"
            app:layout_constraintLeft_toLeftOf="@id/title_txt"
            android:id="@+id/title_edit_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="제목" />

        <TextView
            app:layout_constraintTop_toBottomOf="@id/title_edit_txt"
            app:layout_constraintLeft_toLeftOf="@id/title_edit_txt"
            android:id="@+id/content_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내용" />

        <EditText
            app:layout_constraintLeft_toLeftOf="@id/content_txt"
            app:layout_constraintTop_toBottomOf="@id/content_txt"
            android:id="@+id/content_edit_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="내용" />

        <TextView
            app:layout_constraintTop_toBottomOf="@id/content_edit_txt"
            app:layout_constraintLeft_toLeftOf="@id/content_edit_txt"
            android:id="@+id/tag_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            app:layout_constraintLeft_toLeftOf="@id/tag_txt"
            app:layout_constraintTop_toBottomOf="@id/tag_txt"
            android:id="@+id/tag_edit_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="태그" />

        <androidx.appcompat.widget.AppCompatButton
            android:onClick="@{fragment::createGroup}"
            app:layout_constraintLeft_toLeftOf="@id/tag_edit_txt"
            app:layout_constraintTop_toBottomOf="@id/tag_edit_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="생성"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>